@{
    ViewData["Title"] = "CreateRole";
}

@model DA.Models.ProjectRole

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card my-3 p-2">
                <div class="card-header">
                    <h3 class="mb-0">Add New Role</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateRole" method="post">

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" asp-for="RoleName">Role Name</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="text" asp-for="RoleName">
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                                <input class="btn btn-secondary" type="reset" value="Cancel">
                                <input class="btn btn-primary" type="submit" value="Save Changes">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
